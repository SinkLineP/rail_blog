<div class="container">
	<%= link_to "All articles", articles_path %>
	<hr>


	<h1><%= @article.title %></h1>

	<p><%= @article.text %></p>
	<p><%= @article.created_at %></p>

	 <%= link_to  "Edit article", edit_article_path(@article) %> |
	 <%= link_to "Delete article", article_path(@article), method: :delete, data: { confirm: 'Действительно удалить?'} %>

	<hr>
	<h3>All Comments: </h3>
	<% @article.comments.each do |comment| %>
	  <p>
	    <strong>Author:</strong>
	    <%= comment.author %>
	  </p>

	  <p>
	    <strong>Text:</strong>
	    <%= comment.body %>
	  </p>
	  <p style="color: blue;">Create time: <%= comment.created_at %></p>
	  <p>-----------------------------</p>
	<% end %>

	<hr>
	<h2>Add Comment</h2>
	<%= form_for ([@article, @article.comments.build]) do |f| %>
	<!--   <p>
	    <%= f.label :author %><br>
	    <%= f.text_field :author %>
	  </p> -->

	  <p>
	    <%= f.label :text %><br>
	    <%= f.text_area :body %>
	  </p>

	  <p>
	    <%= f.submit 'Опубликовать!'%>
	  </p>
	<% end %>
</div>