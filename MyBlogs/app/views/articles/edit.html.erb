<%= form_with scope: :article, url: article_path(@article), method: :put do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit 'Опубликовать!'%>
  </p>
<% end %>