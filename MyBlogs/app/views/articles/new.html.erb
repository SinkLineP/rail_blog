<div class="container">	
	<%= simple_form_for :article, url: articles_path do |f| %>
	  <div class="popa">
	  	<%= f.input :title,
	  							required: true,
	  							autofocus: true,
	  							input_html: {
	  							class: 'form-control',
	  							placeholder: "title",
	  							autocomplete: "title"}
	  	%>
	  </div>
	    
	  <div>
	  	<%= f.input :text, :class => 'form-control' %>
		</div>
		
		<div>
			<%= f.submit 'Опубликовать!', :class => 'btn btn-success'%>
		</div>
	<% end %>
</div>