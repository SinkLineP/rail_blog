<!DOCTYPE html>
<html>
  <head>
    <title>MyBlogs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <body>

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/" style="color: green;">Navbar</a>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
<!--           <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
            </li>
          </ul> -->
        </div>
        <div>
          <% if user_signed_in? %>
          <i>Hello, </i><b><%= current_user.username %></b>  
          <%= link_to "Sign_Out!", destroy_user_session_path, method: :delete, :class => 'btn btn-secondary btn-xs' %>
          <%= link_to "All articles", articles_path, :class => 'btn btn-success' %> 
          <%= link_to "Contact", contacts_path, :class => 'btn btn-warning' %> 
            <% else %>
          <%= link_to "Sign_In!", new_user_session_path, :class => 'btn btn-info' %>   
          <%= link_to "Contact", contacts_path, :class => 'btn btn-warning' %> 
          <% end %>
        </div>
      </nav>

      

      <br />
      <br />

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>


